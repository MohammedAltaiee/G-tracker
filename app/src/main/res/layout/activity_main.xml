<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.634"
    android:background="@drawable/login_page"
    tools:ignore="SpeakableTextPresentCheck">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/contactUsTextView"
            android:layout_width="87dp"
            android:layout_height="49dp"
            android:layout_marginStart="36dp"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="Contact Us"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/aboutTextView"
            app:layout_constraintTop_toBottomOf="@+id/registerTextView" />

        <TextView
            android:id="@+id/aboutTextView"
            android:layout_width="48dp"
            android:layout_height="49dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="About"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/forgotPasswordTextView"
            app:layout_constraintTop_toBottomOf="@+id/registerTextView" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="36dp"
            android:layout_marginTop="32dp"
            android:text="Don't have an account?"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logInButton" />

        <ProgressBar
            android:id="@+id/progressBarMain"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/registerTextView"
            android:layout_width="63dp"
            android:layout_height="48dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="Register"
            android:textColor="#2AB97E"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toBottomOf="@+id/logInButton" />

        <TextView
            android:id="@+id/forgotPasswordTextView"
            android:layout_width="120dp"
            android:layout_height="48dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="12dp"
            android:clickable="true"
            android:gravity="center_vertical"
            android:minHeight="48dp"
            android:text="Forgot Password?"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/registerTextView" />

        <TextView
            android:id="@+id/nowid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="now!"
            app:layout_constraintStart_toEndOf="@+id/registerTextView"
            app:layout_constraintTop_toBottomOf="@+id/logInButton" />

        <EditText
            android:id="@+id/userNameId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="368dp"
            android:background="@drawable/email_login"
            android:ems="10"
            android:hint="E-mail"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:paddingLeft="60dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.216"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/passwordId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:background="@drawable/password_login"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName|textPassword"
            android:minHeight="48dp"
            android:paddingLeft="60dp"
            android:password="true"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/userNameId"
            app:layout_constraintVertical_bias="0.061" />

        <Button
            android:id="@+id/logInButton"
            android:layout_width="303dp"
            android:layout_height="68dp"
            android:layout_marginTop="36dp"
            android:background="@drawable/login_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.148"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/passwordId"
            tools:ignore="SpeakableTextPresentCheck" />

        <View
            android:id="@+id/divider"
            android:layout_width="391dp"
            android:layout_height="1dp"
            android:layout_marginTop="116dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/aboutTextView"
            tools:layout_editor_absoluteX="13dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>







